{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Deno",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/backend",
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--inspect-brk",
                "--allow-net=127.0.0.1:8000,127.0.0.1:4000",
                "--allow-env=APP_HOST,APP_PORT",
                "index.ts"
            ],
            "attachSimplePort": 9229,
        }
    ]
}